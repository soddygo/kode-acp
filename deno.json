{
  "name": "@soddygo/kode-acp",
  "version": "0.1.0",
  "exports": "./src/index.ts",
  "include": ["src/**/*", "README.md", "LICENSE"],
  "exclude": ["node_modules", "dist", "scripts", "jsr.json", "mod.ts", "tsconfig.json", "package.json", "package-lock.json", "PUBLISHING.md"],
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext", "deno.ns"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo", "camelcase", "no-unused-vars"],
      "exclude": ["no-console"]
    }
  },
  "fmt": {
    "options": {
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}